


@model List<Pizza>



@if (Model.Count == 0)
{
    <h3>Al momento il sito è in manutenzione, ci scusiamo per il disagio!</h3>
}
else
{
    <div class="container">
        <div class="row main row">

            @foreach (Pizza pizza in Model)
            {

                <div class="col-md-6 col-xl-4">
                    <div class="card shadow bg-body rounded ">
                        <img src="@pizza.Image" class="card-img-top" alt="Pizza">
                        <div class="card-body p-0">
                            <h4 class="card-title text-bg-warning text-white p-3">@pizza.Title</h4>

                            <p class="card-text text-center fw-lighter p-4 text-white">
                                @pizza.Description
                            </p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <p class="text-warning fw-semibold">@pizza.Title - @pizza.Description</p>
                                <p> <b>@pizza.Prezzo €</b> <small class="text-muted"></small></p>
                                <a class="btn btn-primary" href="@Url.Action("Details", "Pizza", new { id = pizza.Id } )" role="button">Dettagli</a>
                            </li>

                        </ul>
                    </div>
                </div>

            }





        </div>

    </div>

}









